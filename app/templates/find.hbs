<div class="find-table">
  <table class="table table-inverse">
    <thead>
      <tr>
        <th>Email Address</th>
        <th>Date</th>
        <th>From</th>
        <th>To</th>
        <th>Number of days</th>
        <th>Home address</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |data|}}
      <tr>
        <td>{{data.emailAddress}}</td>
        <td>{{data.date}}</td>
        <td>{{data.from}}</td>
        <td>{{data.to}}</td>
        <td>{{data.no_days}}</td>

        {{#g-map lat=data.lat lng=data.lng zoom=15 as |context|}}
          {{#g-map-marker context lat=data.lat lng=data.lng as |markerContext|}}
            {{#g-map-infowindow markerContext openOn="mouseover" closeOn="mouseout"}}
              <h6>{{data.homeAddress}}</h6>
            {{/g-map-infowindow}}
          {{/g-map-marker}}
        {{/g-map}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
